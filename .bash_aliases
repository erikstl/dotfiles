#/usr/bin/env bash

# Utilities
alias update="sudo apt-get update"
alias upgrade="sudo apt-get upgrade"

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"
alias -- -="cd -"

# Shortcuts
alias d="cd ~/Dropbox"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias p="cd ~/projects"
alias g="git"

# Allow aliases to be sudo'ed
alias sudo='sudo '

# Misc
alias cls="clear"
